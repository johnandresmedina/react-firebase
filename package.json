{
  "name": "base-react-app",
  "version": "0.1.0",
  "description": "A base create-react-app to be used as a template",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/johnandresmedina/base-react-app.git"
  },
  "keywords": [
    "react.js"
  ],
  "author": "John Medina",
  "license": "MIT",
  "scripts": {
    "lint": "eslint src --color",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:coverage": "react-scripts test --coverage",
    "format:check": "prettier --check \"src/**/*.{js,jsx,json,ts,tsx,scss,md}\"",
    "format": "prettier --write \"src/**/*.{js,jsx,json,ts,tsx,scss,md}\" ",
    "eject": "react-scripts eject"
  },
  "dependencies": {
    "@material-ui/core": "^4.11.0",
    "@material-ui/icons": "^4.9.1",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.7",
    "@types/react": "^16.9.56",
    "@types/react-dom": "^16.9.9",
    "date-fns": "^2.16.1",
    "firebase": "^7.23.0",
    "fontsource-roboto": "^3.0.3",
    "node-sass": "^4.14.0",
    "prop-types": "^15.7.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-query": "^2.26.2",
    "react-query-devtools": "^2.6.2",
    "react-router-dom": "^5.1.2",
    "react-scripts": "4.0.0",
    "typescript": "^4.0.5"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.5",
    "@testing-library/react": "^11.1.2",
    "@testing-library/user-event": "^12.2.2",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.2",
    "prettier": "^2.0.5"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "no-console": [
        "error",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ],
      "react/sort-prop-types": 2
    }
  },
  "prettier": {
    "printWidth": 120,
    "trailingComma": "all",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "bracketSpacing": true,
    "useTabs": false,
    "jsxBracketSameLine": true,
    "jsxSingleQuote": true,
    "arrowParens": "avoid",
    "endOfLine": "lf"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint",
    "*.{js,jsx,json,ts,tsx,scss,md}": "prettier --write"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
